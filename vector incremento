// funciones.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define TAM 100

using namespace std;

void leer_vector(int vec[],int n);
void mostrar_vector(int vec[],int n);
void incremento(int vec[], int n);
void main()
{
int v[TAM],m, inc[TAM];

do
{ 
cout<<"Ingrese el numero de elementos: ";
cin>>m;
}while((m>TAM)||(m<0));
leer_vector(v,m);
mostrar_vector(v,m);
cout<<endl;
incremento(v,m);
mostrar_vector(v,m);
cout<<endl;

getch();
}

void leer_vector(int vec[],int n)
{
for(int i=0;i<n;i++)
{
cout<<"["<<i<<"]=";
cin>>vec[i];
}
}

void mostrar_vector(int vec[],int n)
{

for(int i=0;i<n;i++)
{
cout<<"["<<i<<"]=";
cout<<vec[i]<<"\n";

}

}

void incremento(int vec[],int n)
{
for (int i=0;i<n;i++)
vec[i]=vec[i]*1.10;
}
