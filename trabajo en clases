void main()
{
	int n,ed;
	do
	{cout<<"ingrese el numero del elemento:";
	cin>>n;
	}
	while((n>100)||(n<0));

	leer_vector(ed,n);
	cout<<"edades sin clasificar:";
	mostrar_vector(ed,n);
	cout<<"edades clasificadas:";
	ordenar_vector(ed,n);
	getch();
}
void leer_vector(int edad[],int n)
{ bool flag;
  cout<<"ingrese las edades:";
  for(int i=0;i<n;i++)
  {do
  {cout<<"["<<i<<"]=";
  cin>>edad[i];
  flag=validar_rango(edad[i],i,150);
  }
  while(!flag);
  }
}

void mostrar_vector(int edad[],int n) 

{for (int i=0;i<n;i++)
 cout<<"["<<1<<"]="<<edad[i];
}
bool validar_rango(int e,int ri,int rf)
{ if((e>=ri)&&(e>=rf))
      return true;
else 
|      return false;
}
void ordenar_vector(int edad[],int n)
{
	int aux;
	for (int i=0;i<n;i++)
		for(int j=i+1;j<n-1;j++)
			if(edad[j]<edad[i])

	{ aux=edad[i];
	  edad[i]=edad[j];
	  edad[j]=aux;
	}
}
