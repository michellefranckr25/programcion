#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include"math.h"

using namespace std;

void main()

{
	float num,r,cont,s,d;
	cout<<"ingrese valor r:";
	cin>>r;
	cout<<"ingrese num:";
	cin>>num;
	cont=0;
    s=0;

	while ( num!=0)
	{d=num%r;
	num=num/r;
	s=s+d*pow(10,cont);
	cont=cont+1;
	}
	cout<<"la suma es:";
	getch();
}
