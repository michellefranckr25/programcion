// practico 3.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
int n,i,suma,signo;
cout<<"ingrese su numero:";
cin>>n;
suma=0;
i=1
signo=+1;
while (1<n)
{suma=suma+signo*1;
i=i+1;
signo=signo*(-1);
}
cout<"la suma es:";
cout<<suma;
getch();
}
